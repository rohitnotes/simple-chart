<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:chart="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF282828"
    tools:context="com.basv.samples.simplechartviewsample.MainActivity$PlaceholderFragment">

    <view
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.basv.simplechartview.SimpleChartView"
        android:id="@+id/graphView"
        chart:gridVisibility="horizontal"
        chart:viewportSize="@integer/graph_viewport"/>

</RelativeLayout>
